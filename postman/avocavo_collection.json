{
  "info": {
    "_postman_id": "11111111-1111-1111-1111-111111111111",
    "name": "Avocavo Nutrition API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://app.avocavo.app"
    },
    {
      "key": "api_key",
      "value": "sk_welcome_api_key_gr4d8h00t8ftskobfwsrx"
    }
  ],
  "item": [
    {
      "name": "Valid ingredient – 200 OK",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"ingredient\": \"1 cup rice\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/v2/nutrition/ingredient",
          "host": ["{{base_url}}"],
          "path": ["api", "v2", "nutrition", "ingredient"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "const jsonData = pm.response.json();",
              "pm.test(\"Response has success=true\", function () {",
              "    pm.expect(jsonData).to.have.property(\"success\", true);",
              "});",
              "",
                "pm.test(\"Response has nutrition block\", function () {",
                "    pm.expect(jsonData).to.have.property(\"nutrition\");",
                    "pm.expect(jsonData.nutrition).to.be.an(\"object\");",
                    "pm.expect(Object.keys(jsonData.nutrition).length).to.be.above(0);",
               "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Missing ingredient – 4xx",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{}"
        },
        "url": {
          "raw": "{{base_url}}/api/v2/nutrition/ingredient",
          "host": ["{{base_url}}"],
          "path": ["api", "v2", "nutrition", "ingredient"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Client error for missing ingredient (4xx)\", function () {",
              "    pm.expect(pm.response.code).to.be.within(400, 499);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Missing API key – 401/403",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"ingredient\": \"1 cup rice\"}"
        },
        "url": {
          "raw": "{{base_url}}/api/v2/nutrition/ingredient",
          "host": ["{{base_url}}"],
          "path": ["api", "v2", "nutrition", "ingredient"]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Unauthorized when API key is missing\", function () {",
              "    pm.expect([401, 403]).to.include(pm.response.code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
